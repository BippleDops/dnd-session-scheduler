# Copy this to .env and fill in values
# cp env.example .env

# Server
PORT=3000
NODE_ENV=production
BASE_URL=https://dndsignup.get-suss.com
SESSION_SECRET=change-me-to-a-random-64-char-string

# Google OAuth 2.0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://dndsignup.get-suss.com/auth/google/callback

# Admin emails (comma-separated)
ADMIN_EMAILS=your-email@gmail.com

# Email (Gmail SMTP with App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=D&D Session Scheduler <your-email@gmail.com>
EMAIL_AUTO_SEND=false

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=

# Google Calendar (optional, service account JSON path)
GOOGLE_CALENDAR_ID=
GOOGLE_SERVICE_ACCOUNT_KEY=

# Data migration (one-time, from existing Google Sheet)
GOOGLE_SHEET_ID=
